        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 全局setting配置,根据需要添加 -->
    <!-- 配置别名 -->
    <typeAliases>
        <!-- 批量扫描设置别名 -->
        <package name="com.yuzhouwan.site"/>
